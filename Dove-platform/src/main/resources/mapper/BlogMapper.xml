<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sanxia.dove.platform.mapper.BlogMapper">
    <insert id="insertBlog" parameterType="Blog">
        insert into blog_info(ID,WRITER_ID,CONTENT,CREATE_TIME,LAST_MODI_TIME,DELETE_TIME,IS_DELETE,AGREES,DISAGREES,REVIEWS)
        VALUES (#{id},#{writerId},#{content, typeHandler=org.apache.ibatis.type.BlobTypeHandler},
        str_to_date(#{createTime},'%Y-%m-%d %H:%i:%s'),str_to_date(#{lastModiTime},'%Y-%m-%d %H:%i:%s'),str_to_date(#{deleteTime},'%Y-%m-%d %H:%i:%s'),
        #{isDelete},#{agrees},#{disagrees},#{reviews})
    </insert>

</mapper>